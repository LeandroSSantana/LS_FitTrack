@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style>
    .form-control {
        width: 100%;
    }

    .custom-form {
        width: 470px;
        margin: 0 auto;
    }

    .button-group {
        margin-top: 20px;
    }
</style>

<h1 style="text-align: center;">Cadastrar Novo Exercicio</h1>

<div class="d-flex justify-content-center">
    <form class="form custom-form" asp-controller="Exercicio" asp-action="Create" method="POST">
        <div class="form-group">
            <label for="nome">Exercicio</label>
            <input type="text" class="form-control" name="Nome" id="nome" required />
        </div>

        <div class="form-group">
            <label for="musculo">Grupo Muscular</label>
            <select class="form-control" name="musculo" id="musculo" required>
                <option value="peito">Peito</option>
                <option value="costas">Costas</option>
                <option value="ombro">Ombro</option>
                <option value="triceps">Tríceps</option>
                <option value="biceps">Bíceps</option>
                <option value="pernas">Pernas</option>
                <option value="panturrilha">Panturrilha</option>
                <option value="abdomem">Abdomem</option>
                <option value="lombar">Lombar</option>
                <option value="cardio">Cardio</option>
            </select>
        </div>

        <div class="form-group">
            <label for="dia">Dia</label>
            <select class="form-control" name="dia" id="dia" required>
                <option value="domingo">Domingo</option>
                <option value="segunda-feira">Segunda-feira</option>
                <option value="terça-feira">Terça-feira</option>
                <option value="quarta-feira">Quarta-feira</option>
                <option value="quinta-feira">Quinta-feira</option>
                <option value="sexta-feira">Sexta-feira</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="repeticao">Repetição</label>
            <input type="text" class="form-control" name="Repeticao" id="repeticao" required />
        </div>

        <div class="text-center button-group">
            <button class="btn btn-primary">Salvar</button>
            <a href="javascript:history.back()" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>
