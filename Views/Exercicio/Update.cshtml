@model List<Exercicio>
@{ Layout = "Layout"; }

<style>
    .header {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .page-container {
        padding: 20px;
    }

    .form-container {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 300px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #f2f2f2;
        font-weight: bold;
        text-align: left;
    }

    .table a {
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<div class="page-container">
    <h1 class="header">Aluno</h1>

    <div class="form-container">
        <form action="/aluno/search" method="post">
            <div class="form-group">
                <input type="text" name="searchKeyword" class="form-control" placeholder="Digite o nome do(a) aluno(a)">
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>

    <table class="table">
        @foreach (Exercicio e in Model)
        {
            <tr>
                <td>@e.Nome</td>
                <td>@e.Musculo</td>
                <td><a href="/exercicio/details/@e.ExercicioId">Detalhes</a></td>
                <td><a href="/exercicio/delete/@e.ExercicioId">Excluir</a></td>
                <td><a href="/exercicio/update/@e.ExercicioId">Editar</a></td>
            </tr>
        }
    </table>

    <a class="btn btn-primary" href="/exercicio/create">Adicionar</a>
</div>

