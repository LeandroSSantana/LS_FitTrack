@model List<Aluno>
@{ Layout = "/Views/Shared/_Layout.cshtml"; }

<style>
    .header {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .page-container {
        padding: 20px;
    }

    .form-container {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 300px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #f2f2f2;
        font-weight: bold;
        text-align: left;
    }

    .table a {
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<div class="page-container">
    <h1 class="header">Aluno</h1>

    <div class="form-container">
        <form action="/aluno/search" method="post">
            <div class="form-group">
                <input type="text" name="searchKeyword" class="form-control" placeholder="Digite o nome do(a) aluno(a)">
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>

    <table class="table">
    @foreach (Aluno a in Model)
    {
        <tr>
            <td>@a.Nome</td>
            <td>@a.Email</td>
            <td><a href="/aluno/details/@a.AlunoId">Detalhes</a></td>
            <td><a href="/aluno/update/@a.AlunoId">Editar</a></td>
            <td><a href="/aluno/delete/@a.AlunoId" class="btn btn-warning" onclick="return confirm('Tem certeza que deseja excluir este aluno?')">Excluir</a></td>
        </tr>
    }
</table>

    <a class="btn btn-primary" href="/aluno/create">Adicionar</a>
    <a href="javascript:history.back()" class="btn btn-secondary">Voltar</a>
</div>

